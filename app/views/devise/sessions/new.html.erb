<% page_title "Login - Music Tab" %>

<div class="row justify-content-center" role="main">
  <div class="col-md-4">
    <div class="card m-3" aria-labelledby="login-heading">
      <div class="card-body">
        <h2 id="login-heading" class="text-center">Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", aria: { describedby: "email-help" } %>
          </div>

          <div class="field">
            <%= f.label :password, class: "form-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="p-2 d-flex align-items-center justify-content-center">
              <%= f.check_box :remember_me, class: "p-2 form-check-input", aria: { label: "Remember me" } %>
              <%= f.label :remember_me, class: "p-1" %>
            </div>
          <% end %>

          <div class="actions d-flex align-items-center justify-content-center">
            <%= f.submit "Log in", class: "btn btn-primary", aria: { label: "Log in to Music Tab" } %>
          </div>
        <% end %>

        <div class="text-center m-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
