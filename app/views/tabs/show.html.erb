<script>
  document.addEventListener('DOMContentLoaded', function() {
    let scrollInterval;
    let scrollSpeed = 10; // Initial speed, lower is faster

    document.getElementById('auto-scroll-btn').addEventListener('click', function() {
      if (scrollInterval) {
        clearInterval(scrollInterval);
      }

      scrollInterval = setInterval(function() {
        // Scroll by a small amount each time
        window.scrollBy(0, 2);

        // Stop scrolling when the bottom is reached
        if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
          clearInterval(scrollInterval);
        }
      }, scrollSpeed);
    });

    document.getElementById('increase-speed-btn').addEventListener('click', function() {
      if (scrollSpeed > 1) {
        scrollSpeed -= 1; // Decrease interval time to increase speed
      }
    });

    document.getElementById('decrease-speed-btn').addEventListener('click', function() {
      scrollSpeed += 1; // Increase interval time to decrease speed
    });
  });
</script>
